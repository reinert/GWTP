<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
    <ui:with field="resource" type="com.gwtplatform.carstore.client.resources.AppResources"/>

    <ui:style>
        .panelWrapper {
            padding: 10px;
            padding-top: 20px;
        }

        .formRow {
            margin-bottom: 10px;
        }

        .formRow select {
            width: 100%;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panelWrapper}">
        <div class="{style.formRow}">
            <g:TextBox ui:field="model" styleName="{resource.styles.mobileTextField}"/>
        </div>

        <div class="{style.formRow}">
            <g:ValueListBox ui:field="manufacturer"/>
        </div>

        <div>
            <div class="{style.formRow}">
                <g:TextBox ui:field="someString" styleName="{resource.styles.mobileTextField}"/>
            </div>

            <div class="{style.formRow}">
                <g:IntegerBox ui:field="someNumber" styleName="{resource.styles.mobileTextField}"/>
            </div>

            <div>
                <d:DateBox ui:field="someDate" styleName="{resource.styles.mobileTextField}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
