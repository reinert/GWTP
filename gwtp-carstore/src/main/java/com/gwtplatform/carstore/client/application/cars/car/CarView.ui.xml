<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
    <ui:with field="resource" type="com.gwtplatform.carstore.client.resources.AppResources"/>

    <ui:style>
        .formRow {
            margin-bottom: 10px;
        }
    </ui:style>

    <g:PopupPanel glassEnabled="true" autoHideEnabled="true" animationEnabled="true">
        <g:HTMLPanel>
            <div>
                <g:InlineLabel>Model:</g:InlineLabel>
                <g:TextBox ui:field="model" debugId="car-model-input"/>
            </div>

            <div>
                <g:InlineLabel>Manufacturer:</g:InlineLabel>
                <g:ValueListBox ui:field="manufacturer" debugId="car-manufacturer-input"/>
            </div>

            <div>
                <div class="{style.formRow}">
                    <g:TextBox ui:field="someString" styleName="{resource.styles.mobileTextField}"/>
                </div>

                <div class="{style.formRow}">
                    <g:IntegerBox ui:field="someNumber" styleName="{resource.styles.mobileTextField}"/>
                </div>

                <div>
                    <d:DateBox ui:field="someDate" styleName="{resource.styles.mobileTextField}"/>
                </div>
            </div>

            <div>
                <g:Button ui:field="save" debugId="car-save">Save</g:Button>
                <g:Button ui:field="close" debugId="car-close">Close</g:Button>
            </div>
        </g:HTMLPanel>
    </g:PopupPanel>
</ui:UiBinder>
